<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button3"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:background="@drawable/speech_bubble"
        android:onClick="btn_Click3"
        android:text="신년운세는!?!?\n(복채 : 200 \)"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/horse_ground"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#70423D3D"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonA"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/horse1"
                android:backgroundTint="#9C3D3D"
                android:text="A"
                android:textColor="#FFFFFF" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2배 (42%)"
                    android:textColor="#ffFFFFFF"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewAA" />

                <TextView
                    android:id="@+id/textViewAA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="적토마"
                    android:textColor="#ffFFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#70423D3D"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonC"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/horse3"
                android:text="B"
                android:textColor="#FFFFFF" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3배 (30%)"
                    android:textColor="#ffFFFFFF"
                    android:textSize="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewCC" />

                <TextView
                    android:id="@+id/textViewCC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="백마"
                    android:textColor="#ffFFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#70423D3D"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonB"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/horse4"
                android:text="C"
                android:textColor="#FFFFFF" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5배(18%)"
                    android:textColor="#ffFFFFFF"
                    android:textSize="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewBB" />

                <TextView
                    android:id="@+id/textViewBB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="조랑말"
                    android:textColor="#ffFFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#70423D3D"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonD"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/horse2"
                android:text="D"
                android:textColor="#FFFFFF" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13배(7%)"
                    android:textColor="#ffFFFFFF"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewDD" />

                <TextView
                    android:id="@+id/textViewDD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="당나귀"
                    android:textColor="#ffFFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#70423D3D"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonE"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/horse5"
                android:text="E"
                android:textColor="#FFFFFF" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30배(3%)"
                    android:textColor="#ffFFFFFF"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewEE" />

                <TextView
                    android:id="@+id/textViewEE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="트로이목마"
                    android:textColor="#ffFFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:srcCompat="@drawable/fortune_teller" />

    <TextView
        android:id="@+id/MoneyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="당신의 현재금액은 :"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <EditText
        android:id="@+id/BetEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="베팅할 금액은?"
        android:inputType="number"
        android:textColor="#030303"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MoneyTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>